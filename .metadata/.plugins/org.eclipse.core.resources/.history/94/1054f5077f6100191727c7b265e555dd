package com.project2.teacher;

import java.util.Scanner;

import com.project2.main.MainView;

public class TeacherView {

	public final static int LESSON = 1;
	public final static int GRADE = 2;
	public final static int ATTENDED = 3;

	private MainView mview;

	public TeacherView() {

		mview = new MainView();

	}

	public void login() {
		System.out.println("[강사 로그인 화면]");
	}

	public void loginSucess() {
		System.out.println("로그인 성공이야 !!!");
	}

	public void menu() {

		System.out.println("============================");
		System.out.println("[강사 메뉴]");
		System.out.println("1. 강의스케줄 조회");
		System.out.println("2. 성적 조회");
		System.out.println("3. 학생 출결조회");
		System.out.println("0. 뒤로가기");
		System.out.println("============================");
		System.out.print("> ");

	}
	public void scoremenu() {
		System.out.println("============================");
		System.out.println("[성적 및 배점 조회]");
		System.out.println("1. 배점 조회");
		System.out.println("2. 가답안 조회");
		System.out.println("3. 맞힌 문제 개수 조회");
		System.out.println("4. 최종 변환 점수 조회");
		System.out.println("0. 뒤로가기");
		System.out.println("============================");
		System.out.print(">  ");
		
		
		
	}
	
	public void pilgiORsilgmenu() {
		System.out.println("1. 필기 조회");
		System.out.println("2. 실기 조회");
		System.out.println("0. 뒤로가기");
		System.out.println("============================");
		System.out.print(">  ");
		
	}

	public void title(int n) {

		if (n == TeacherView.LESSON) {
			System.out.println("[강의스케줄 조회]");
		} else if (n == TeacherView.GRADE) {
			System.out.println("[성적 조회]");
		} else if (n == TeacherView.ATTENDED) {
			System.out.println("[학생 출결조회]");
		}

	}


	public void courseTitle() {
		System.out.println("[과정별 조회]");
		System.out.println("[과정번호]\t[과정기간]\t\t\t[과정명]");

	}
	public void subjectTitle() {
		System.out.println("[과목별 조회]");
		System.out.println("[과목번호]\t[과목명]\t\t\t[과목기간]\t\t\t\t[과목설명]");

	}

	public void gradeTitle() {
		System.out.println("[성적 조회]");
		System.out.println("[번호]\t[교육생]\t[과목명]\t[출석점수]\t[필기점수]\t[실기점수]\t[총점수]");

	}
	
	public void numberanswerTitle() {
		
		System.out.println("[맞힌 개수 조회]");
		System.out.println("[번호]\t[교육생]\t[과목명]\t[필기]\t[실기]\t[출석]");
	}

	

	public void pause() {
		mview.pause();
	}

	public void pauseBack() {
		mview.pauseBack();
	}

	
	public void perScore() {
		System.out.println("[배점 조회");
		System.out.println("[과목번호]" + "  " +"[과목명]\t[결석]\t[지각]\t[외출]\t[조퇴]\t[병가]\t[기타]\t[출근]\t[출석배점]"+ "  " +"[필기배점]"+ "  " +"[실기배점]\n");
	
	}
		
	public void answerJohae() {
		
		System.out.println("[가답안 조회]");
		System.out.println("[문제번호]\t[문제]\t\t[문제답안]");
	}
//		--------------------------------------------------------------------------------
	public void yearTitle() {
		System.out.println("[년별 조회]");
		System.out.println("[출근날짜]\t\t[출근시간]\t[퇴근시간]\t[이름]\t[상태]\t[과정명]");
	}	
		
		

	public void scheduleTitle() {
		
		System.out.println("[스케줄 조회]");
		System.out.println("[과목번호]\t\t[과정명]\t\t\t\t[과정기간]\t\t[강의실]\t[과목명]\t\t[과목기간]\t\t[교재명]\t\t[학생수]");

	}
	

	public void courseTitle2() {
		System.out.println("[과정별 조회]");
		System.out.println("[과정명]\t\t[과정기간]\t\t\t[상태]");

	}


	public void wholeTitle() {
		System.out.println("[담당학생 전체 출결조회]");
		System.out.println("[출근날짜]\t\t[출근시간]\t[퇴근시간]\t[이름]\t[상태]");

	}

	public void subjectAttendedTitle() {
		System.out.println("[과목별 출결률 조회]");
		System.out.println("[과목명]\t[출결률]");

	}

	public void dayTitle() {
		System.out.println("[일별 조회]");
		System.out.println("[출근날짜]\t\t[출근시간]\t[퇴근시간]\t[이름]\t[상태]\t[과정명]");

	}

	public void monthTitle() {
		System.out.println("[월별 조회]");
		System.out.println("[출근날짜]\t\t[출근시간]\t[퇴근시간]\t[이름]\t[상태]\t[과정명]");

	}	
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
	}

